import matplotlib.pyplot as plt

epsilon = []
epsilon_decay = 0.995
episode_length= 1000
N_eps = 0

for i in range(10000):
    if i%episode_length == 0:
        N_eps +=1
    epsilon.append(epsilon_decay**(N_eps + 0.001*(i%episode_length)))
    
plt.plot(len(epsilon),epsilon)
plt.ylabel('$\epsilon$')
plt.xlabel('number of steps')